    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Tests\\": "tests/"
    },
    "files": [
      "app/Helpers/functions.php"
    ]
  },
  "bin": [
    "bin/datadog-mcp"
  ],
  "require-dev": {
    "phpunit/phpunit": "<12.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
      "app/Helpers/functions.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
